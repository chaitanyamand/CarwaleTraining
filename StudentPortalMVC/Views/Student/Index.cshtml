@model List<Student>

<h2>@ViewData["Title"]</h2>


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Course</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Course</td>
                <td>
                    <a asp-controller="Student" 
                       asp-action="Details" 
                       asp-route-id="@student.Id" 
                       class="button">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="button">Create New Student</a>

