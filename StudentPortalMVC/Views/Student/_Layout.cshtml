<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] Student Portal</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            color: darkblue;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 10px;
        }

        th,
        td {
            border: 1px solid #aaa;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #eee;
        }

        a.button {
            display: inline-block;
            padding: 4px 10px;
            background: #555;
            color: #fff;
            text-decoration: none;
            margin-top: 10px;
        }

        a.button:hover {
            background: #333;
        }
    </style>
</head>

<body>
    <h1>Student Portal</h1>
    <hr />
    @RenderBody()
</body>

</html>
